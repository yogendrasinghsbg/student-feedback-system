 <!-- form handling -->
 <form action="add_user" method="POST" id="add_user">
    <div class="new_user">
        <div class="form-group">
            <label for="name" class="text-light">Name</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="name" value="" placeholder="Mark Stoenis">
        </div>

        <div class="form-group">
            <label for="Email" class="text-light">Email</label>
            <input type="text" name="email" value="" placeholder="example@gmail.com">
        </div>

        <div class="form-group">
            <label for="Enrollment_NO" class="text-light">Enrollment_NO</label>
            <input type="text" name="Enrollment_NO" value="" placeholder="example@gmail.com">
        </div>

        <div class="form-group">
            <label for="gender" class="text-light">User</label>
            <div class="radio inline">
                <input type="radio" id="radio-4" name="User" value="Student" >
                <label for="radio-4" class="radio-label">Student</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-5" name="User" value="Fculty" >
                <label for="radio-5" class="radio-label">Fculty</label>
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>