
<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

  <!-- Main Site -->
  <main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
           <div class="filter">
               <a href="/home"><i class="fas fa-angle-double-left"></i> All Students</a>
           </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">New Student</h2>
            <span class="text-light">Use the below form to create a new student account</span>
        </div>

        <form action="add_user" method="POST" id="add_user">
            <div class="new_user">
                <div class="form-group">
                    <label for="name" class="text-light">Name</label>
                    <input type="text" name="name" value="" placeholder="Mark Stoenis">
                </div>
        
                <div class="form-group">
                    <label for="email" class="text-light">Email</label>
                    <input type="text" name="email" value="" placeholder="example@gmail.com">
                </div>
        
                <div class="form-group">
                    <label for="enrollment_no" class="text-light">Enrollment_NO</label>
                    <input type="text" name="enrollment_no" value="" placeholder="enrollmentno">
                </div>
        
                <div class="form-group">
                    <button type="submit" class="btn text-dark update">Save</button>
                </div>
        
            </div>
        </form>
       
    </div>
</main>
<!-- /Main Site -->

<!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer -->
